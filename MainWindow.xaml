<Window x:Class="exam_creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam_creator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Wellcome to Exam Creator 0.0" FontSize="24" Margin="20 20" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal">
            <Button Name="BtnCreateNewExam" Content="Create exam" FontSize="16" Margin="20,10, 20, 10" Padding="10"/>
            <Button Name="BtnOpenExam" Content="Open exame" FontSize="16" Margin="20,10, 20, 10" Padding="10"/>
            <Button Name="BtnCreateNewQuestion" FontSize="16" Content="Create new question" Margin="20,10, 20, 10" Padding="10"/>
        </StackPanel>
    </StackPanel>
</Window>
