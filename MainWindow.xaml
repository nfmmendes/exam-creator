<Window x:Class="exam_creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam_creator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="CentralButtons">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="20 10 20 10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="180" />
            <Setter Property="Width" Value="180" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Wellcome to Exam Creator 0.0" FontSize="24" Margin="20 20" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="40">
            <Button Name="BtnCreateNewExam" Content="Create exam" Style="{StaticResource CentralButtons}"/>
            <Button Name="BtnOpenExam" Content="Open exam" Style="{StaticResource CentralButtons}"/>
            <Button Name="BtnCreateNewQuestion" Content="Create new question" Style="{StaticResource CentralButtons}"/>
        </StackPanel>
    </StackPanel>
</Window>
